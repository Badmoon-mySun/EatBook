<!--  Filters  -->
    <filter>
        <filter-name>encoding</filter-name>
        <filter-class>ru.itis.eatbook.filters.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>encoding</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

